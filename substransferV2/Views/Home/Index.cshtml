@{
    ViewBag.Title = "Home Page";
}
<div class="window">
    <div class="login-container text-c animated flipInX">
        <div>
            <h1 class="logo-badge text-whitesmoke"><span class="fa fa-user-circle"></span></h1>
        </div>
        <h3 class="text-whitesmoke">Subtransfer OQC SEMPROD V5</h3>
        <div class="container-content" id="mainContainer">
            <div id="form">
                <div class="margin-t">
                    <div class="form-group">
                        <select id="selModel" @*class="form-control"*@ required=""  style="width:100%;">
                            <option>Seleccione el modelo...</option>
                        </select>
                        @*<input type="text" class="form-control" placeholder="Seleccione el modelo..." required="">*@
                    </div>
                    <div class="form-group">
                        <input id="boxSerial" type="text" class="form-control" placeholder="Escriba o escanee el codigo QR" required="">
                    </div>
                    <div class="form-group">
                        <input id="boxPcb" type="text" class="form-control" placeholder="Escriba o escanee la PCB" required="">
                    </div>
                    <div class="form-group">
                        <input id="user" type="text" class="form-control" placeholder="Escanee número de usuario" required="">
                    </div>
                    <button id="btnSend" class="form-button button-l margin-b">Enviar</button>
                </div>
            </div>
            <div id="message">
                <div class='alert alert-warning' role='alert' style="background-color:gray;padding:0px;">
                    <div id="loader" style="margin-left:auto;margin-right:auto;">
                        <div class="loader loader-17">
                            <div class="css-square square1"></div>
                            <div class="css-square square2"></div>
                            <div class="css-square square3"></div>
                            <div class="css-square square4"></div>
                            <div class="css-square square5"></div>
                            <div class="css-square square6"></div>
                            <div class="css-square square7"></div>
                            <div class="css-square square8"></div>
                        </div>
                    </div>
                </div>
            </div>
            <p class="margin-t text-whitesmoke"><small> &copy; @DateTime.Now.Year - Subtransfer OQC V5</small> </p>
        </div>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        $("#message").hide();
        $(document).ready(function () {
            getModels();


        });
        $("#boxSerial").keyup(function (event) {
            if (event.which === 13) {
                $("#boxPcb").focus();
            }
        });
        $("#boxPcb").keyup(function (event) {
            if (event.which === 13) {
                $("#user").focus();
            }
        });
        $("#user").keyup(function (event) {
            if (event.which === 13) {
                $("#btnSend").focus();
            }
        });
        $("#btnSend").click(function () {
            //alert("Hola");
            processBox();
            //alert($("#modNal").text());
        });
    </script>
}